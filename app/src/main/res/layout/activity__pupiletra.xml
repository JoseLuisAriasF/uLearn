<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondooscuro"
    tools:context=".activity_puzzleNumeros">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FF018786"
        android:elevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMovimientos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="#fff"
                android:textSize="36sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Movimientos"
                android:textColor="#fff" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtTiempo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="00:00:00"
                android:textColor="#fff"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Tiempo"
                android:textColor="#fff" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNumero1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:text="0"
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            android:background="@color/white"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/signo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:text="+"
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            android:background="@color/teal_700"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/txtNumero2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            android:background="@color/white"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/igual"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:text="="
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            android:background="@color/teal_700"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/txtRespuesta"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            android:background="@color/white"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/groupPupiletra"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button1"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:tag="00"
            android:textSize="25dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="buttonClick"/>

        <Button
            android:id="@+id/button2"
            android:textSize="25dp"
            android:layout_toEndOf="@+id/button1"
            android:layout_alignParentTop="true"
            android:tag="01"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="buttonClick"/>
        <Button
            android:id="@+id/button3"
            android:textSize="25dp"
            android:layout_toEndOf="@+id/button2"
            android:layout_alignParentTop="true"
            android:tag="02"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="buttonClick"/>

        <Button
            android:id="@+id/button4"
            android:layout_alignParentStart="true"
            android:layout_below="@id/button1"
            android:tag="00"
            android:textSize="25dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="buttonClick"/>

        <Button
            android:id="@+id/button5"
            android:layout_toEndOf="@+id/button1"
            android:layout_below="@id/button1"
            android:tag="00"
            android:textSize="25dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="buttonClick"/>

        <Button
            android:id="@+id/button6"
            android:layout_toEndOf="@+id/button2"
            android:layout_below="@id/button1"
            android:tag="00"
            android:textSize="25dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="buttonClick"/>


        <Button
            android:id="@+id/button7"
            android:layout_alignParentStart="true"
            android:layout_below="@id/button4"
            android:tag="00"
            android:textSize="25dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="buttonClick"/>

        <Button
            android:id="@+id/button8"
            android:layout_toEndOf="@+id/button1"
            android:layout_below="@id/button4"
            android:tag="00"
            android:textSize="25dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="buttonClick"/>

        <Button
            android:id="@+id/button9"
            android:layout_toEndOf="@+id/button2"
            android:layout_below="@id/button4"
            android:tag="00"
            android:textSize="25dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="buttonClick"/>




    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="115dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnNuevo"
            android:layout_width="wrap_content"
            android:background="@color/teal_700"
            android:text="Reiniciar"
            android:textColor="@color/white"
            android:layout_height="wrap_content">

        </Button>
        <Button
            android:id="@+id/btnSalir"
            android:layout_width="wrap_content"
            android:background="@color/teal_700"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:text="Salir"
            android:layout_height="wrap_content">

        </Button>
    </LinearLayout>
</FrameLayout>