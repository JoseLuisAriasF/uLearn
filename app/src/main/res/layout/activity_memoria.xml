<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondooscuro"
    tools:context=".activity_sumayresta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FF018786"
        android:elevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPuntaje"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="#fff"
                android:textSize="36sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Puntaje"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:padding="10dp">


        //FILA 1

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/boton00"
                android:layout_width="80dp"
                android:textSize="19dp"
                android:layout_height="80dp"
                android:layout_column="0">
            </Button>

            <Button
                android:id="@+id/boton01"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="19dp"
                android:paddingLeft="500dp"
                android:layout_column="0">

            </Button>

            <Button
                android:id="@+id/boton02"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="19dp"
                android:layout_column="0">

            </Button>

            <Button
                android:id="@+id/boton03"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="19dp"
                android:layout_column="0">
            </Button>
        </TableRow>


        //FILA 2

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/boton04"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="19dp"
                android:layout_column="0">
            </Button>

            <Button
                android:id="@+id/boton05"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="19dp"
                android:layout_column="0">

            </Button>

            <Button
                android:id="@+id/boton06"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="19dp"
                android:layout_column="0">

            </Button>

            <Button
                android:id="@+id/boton07"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="19dp"
                android:layout_column="0">
            </Button>
        </TableRow>


        //FILA 3

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/boton08"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="19dp"
                android:layout_column="0">
            </Button>

            <Button
                android:id="@+id/boton09"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="19dp"
                android:layout_column="0">

            </Button>

            <Button
                android:id="@+id/boton10"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="19dp"
                android:layout_column="0">

            </Button>

            <Button
                android:id="@+id/boton11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="19dp"
                android:layout_column="0">
            </Button>
        </TableRow>


        //FILA 4

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/boton12"
                android:layout_width="80dp"
                android:textSize="19dp"
                android:layout_height="80dp"
                android:layout_column="0">
            </Button>

            <Button
                android:id="@+id/boton13"
                android:layout_width="80dp"
                android:textSize="19dp"
                android:layout_height="80dp"
                android:layout_column="0">

            </Button>

            <Button
